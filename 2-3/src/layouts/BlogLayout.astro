---
import Layout from './Layout.astro';

interface Props {
	title: string;
	description?: string;
	pubDate?: string;
	navActive?: string;
}

const { title, description, pubDate, navActive } = Astro.props;
---
<Layout title={title} description={description} navActive={navActive}>
	<article class="blog-post">
		<header>
			<h1>{title}</h1>
			{pubDate && <time datetime={pubDate}>{new Date(pubDate).toLocaleDateString()}</time>}
		</header>
		<slot />
	</article>
</Layout>

<style>
	.blog-post {
		max-width: 65ch;
		margin: 0 auto;
		padding: 2rem 1rem;
	}
	.blog-post :global(h1) {
		margin-bottom: 0.25em;
	}
	.blog-post time {
		display: block;
		color: var(--color-muted, #6b7280);
		font-size: 0.9rem;
		margin-bottom: 1.5rem;
	}
	.blog-post :global(.prose) {
		line-height: 1.7;
	}
</style>
