---
interface Props {
	active?: string;
}

const { active } = Astro.props;
---
<nav>
	<a href="/" class:list={{ active: active === 'home' }}>Home</a>
	<a href="/posts/post1" class:list={{ active: active === 'post1' }}>Post 1</a>
	<a href="/posts/post2" class:list={{ active: active === 'post2' }}>Post 2</a>
</nav>

<style>
	nav {
		display: flex;
		gap: 1rem;
		padding: 1rem;
		border-bottom: 1px solid #e5e7eb;
	}
	nav a {
		color: #374151;
		text-decoration: none;
	}
	nav a:hover,
	nav a.active {
		color: #111827;
		font-weight: 500;
	}
</style>
